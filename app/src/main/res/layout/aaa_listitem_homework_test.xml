<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:minHeight="50dp"
        card_view:cardCornerRadius="4dp"

        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:paddingEnd="8dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <View
                android:id="@+id/colour_bar"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"
                />

            <TextView
                android:id="@+id/text_subject_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:drawableLeft="@drawable/icon_homework_white"
                android:gravity="center_vertical"
                android:inputType="none"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/text_homework_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_subject_name"
                android:layout_below="@+id/colour_bar"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/text_homework_due_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_homework_title"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/text_homework_title"/>

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/text_subject_name"
                android:background="#00ffffff"
                android:src="@drawable/icon_delete_grey"/>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_above="@+id/button_delete"
                android:layout_alignParentStart="true"
                android:background="?android:attr/listDivider">
            </View>

            <TextView
                android:id="@+id/text_homework_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/text_homework_due_day"
                android:layout_below="@+id/text_homework_due_day"
                android:layout_marginTop="@dimen/input_padding"/>

            <Button
                android:id="@+id/button_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/button_delete"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/label_done"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/button_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/button_done"
                android:layout_toStartOf="@+id/button_done"
                android:background="?android:attr/selectableItemBackground"
                android:text="@string/label_edit"
                android:textColor="@color/colorSecondaryText"
                android:textStyle="bold"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>