<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/todayClassListCard"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:paddingEnd="8dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <View
                android:id="@+id/colourBar"
                android:layout_width="4dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"/>

            <!--Top line of textviews. Subject and teacher -->
            <TextView
                android:id="@+id/subjectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/classIcon"
                android:layout_toEndOf="@+id/classIcon"
                android:layout_toLeftOf="@+id/teacherName"
                android:singleLine="true"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/teacherName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/subjectName"
                android:singleLine="true"
                android:layout_alignParentEnd="true"
                android:paddingEnd="10dp"/>

            <TextView
                android:id="@+id/classTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/classIcon"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/classIcon"
                android:layout_toLeftOf="@+id/classRoom"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/classRoom"
                android:layout_alignBaseline="@+id/classTime"
                android:layout_alignBottom="@+id/classTime"
                android:layout_alignParentRight="true"
                android:singleLine="true"
                android:paddingEnd="10dp"/>

            <ImageView
                android:id="@+id/classIcon"
                android:layout_width="39dp"
                android:layout_height="39dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"

                android:layout_marginTop="10dp"
                android:background="#00ffffff"
                android:src="@drawable/class_icon"/>

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:id="@+id/progressBar"
                android:layout_gravity="left|center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>