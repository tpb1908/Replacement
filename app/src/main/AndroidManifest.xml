<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.anapp.tpb.replacement"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">
        <activity
            android:name=".Main"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".Setup.DataCollection.TermInput"
            android:taskAffinity=""
            android:theme="@style/Theme.Sliding.Light">
        </activity>
        <activity
            android:name=".Setup.DataCollection.SubjectInput"
            android:taskAffinity=""
            android:theme="@style/Theme.Sliding.Light">
        </activity>
        <activity
            android:name=".Setup.IntroActivity"
            android:label="@string/title_activity_intro"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Setup.DataPresentation.TermDateCollector"
            android:label="@string/title_activity_term_date_collector"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Setup.DataPresentation.SubjectCollector"
            android:label="@string/title_activity_subject_input"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Home.Home"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".Setup.DataPresentation.LessonTimeCollector"
            android:label="@string/title_activity_subject_time_input"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name=".Setup.DataCollection.ClassInput"
            android:label="ClassInput"
            android:theme="@style/Theme.Sliding.Light">

        </activity>

    </application>

</manifest>
