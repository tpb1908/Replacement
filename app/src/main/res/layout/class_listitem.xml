<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"

        card_view:cardUseCompatPadding="true"
        card_view:paddingEnd="8dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <View
                android:id="@+id/colourBar"
                android:layout_width="4dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/lessonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/classIcon"
                android:layout_toEndOf="@+id/classIcon"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/classTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/classIcon"
                android:layout_marginRight="8dp"
                android:layout_toEndOf="@+id/classIcon"/>

            <ImageView
                android:id="@+id/classIcon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"

                android:layout_marginTop="16dp"
                android:background="#00ffffff"
                android:src="@drawable/class_icon"/>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/lessonName"
                android:layout_marginEnd="22dp"
                android:background="#00ffffff"
                android:src="@drawable/delete_icon"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>