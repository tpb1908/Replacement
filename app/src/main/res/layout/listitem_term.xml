<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_term_listitem"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:paddingEnd="8dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/text_term_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/icon_term"
                android:layout_toEndOf="@+id/icon_term"
                android:textColor="@color/colorPrimaryText"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/icon_term"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="#00ffffff"
                android:src="@drawable/icon_calendar"/>

            <TextView
                android:id="@+id/text_term_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/icon_term"
                android:layout_toEndOf="@+id/icon_term"
                android:textColor="@color/colorSecondaryText"/>

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:background="#00ffffff"
                android:src="@drawable/icon_delete"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>