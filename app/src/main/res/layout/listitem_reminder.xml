<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_reminder_listitem"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp"

        card_view:cardUseCompatPadding="true"
        card_view:paddingEnd="8dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <View
                android:id="@+id/colour_bar"
                android:layout_width="4dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@color/colorPrimary"/>

            <TextView
                android:id="@+id/edittext_homework_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/reminderIcon"
                android:layout_toEndOf="@+id/reminderIcon"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/reminderIcon"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@+id/reminderIcon"/>

            <ImageView
                android:id="@+id/reminderIcon"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="#00ffffff"
                android:src="@drawable/icon_reminder"/>

            <ImageButton
                android:id="@+id/button_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/edittext_homework_title"
                android:layout_marginEnd="16dp"
                android:background="#00ffffff"
                android:src="@drawable/icon_delete"/>


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>