<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrapper_edittext_class_start_time"
        android:layout_marginTop="@dimen/input_padding"
        android:layout_marginBottom="@dimen/input_padding">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_class_start_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/start_time"
            android:inputType="none"/>
    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/wrapper_edittext_class_end_time"
        android:layout_below="@+id/wrapper_edittext_class_start_time"
        android:layout_marginTop="@dimen/input_padding"
        android:layout_marginBottom="@dimen/input_padding">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/edittext_class_end_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="30dp"
            android:ems="10"
            android:focusable="false"
            android:hint="@string/end_time"
            android:inputType="none"/>
    </android.support.design.widget.TextInputLayout>

    <Spinner
        android:id="@+id/spinner_subject"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/wrapper_edittext_class_end_time"
        android:layout_marginTop="@dimen/input_padding"
        android:clickable="true"
        android:spinnerMode="dropdown"/>

</RelativeLayout>