<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        card_view:cardCornerRadius="4dp"

        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        card_view:paddingEnd="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_homework_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@+id/colour_bar"
                    android:layout_width="fill_parent"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/colorPrimary"
                    />

                <TextView
                    android:id="@+id/text_class_past_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingStart="5dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_vertical"
                    android:inputType="none"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/layout_homework_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:minHeight="50dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_homework_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    />

                <TextView
                    android:id="@+id/text_homework_due_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/text_homework_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/input_padding"
                    android:inputType="none"
                    />

            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                >
            </View>

            <RelativeLayout
                android:id="@+id/layout_homework_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                    android:id="@+id/button_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="17dp"
                    android:background="#00ffffff"
                    android:src="@drawable/icon_delete_grey"/>

                <Button
                    android:id="@+id/button_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignTop="@+id/button_done"
                    android:layout_toStartOf="@+id/button_done"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/label_edit"
                    android:textColor="@color/colorSecondaryText"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/button_done"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/button_delete"
                    android:background="?android:attr/selectableItemBackground"
                    android:text="@string/label_done"
                    android:textColor="@color/colorPrimaryText"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>